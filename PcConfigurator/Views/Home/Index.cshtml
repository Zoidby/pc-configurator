@model PcConfigurator.Models.HomeModels.ConfigurationFormModel

@{
    ViewBag.Title = "Home Page";
}
<br />

<section id="wizard">
    <div class="row form-group">
        <div class="col-xs-12">
            <ul class="nav nav-pills nav-justified thumbnail setup-panel">
                <li class="active">
                    <a href="#step-1">
                        <h4 class="list-group-item-heading">CPU</h4>
                    </a>
                </li>
                <li>
                    <a href="#step-2">
                        <h4 class="list-group-item-heading">Memory</h4>
                    </a>
                </li>
                <li>
                    <a href="#step-3">
                        <h4 class="list-group-item-heading">Storage</h4>
                    </a>
                </li>
                <li>
                    <a href="#step-4">
                        <h4 class="list-group-item-heading">GPU</h4>
                    </a>
                </li>
                <li class="disabled">
                    <a href="#step-5">
                        <h4 class="list-group-item-heading">Motherboard</h4>
                    </a>
                </li>
                <li class="disabled">
                    <a href="#step-6">
                        <h4 class="list-group-item-heading">PSU</h4>
                    </a>
                </li>
                <li class="disabled">
                    <a href="#step-7">
                        <h4 class="list-group-item-heading">Case</h4>
                    </a>
                </li>
                <li class="disabled">
                    <a href="#step-8">
                        <h4 class="list-group-item-heading">Confirm</h4>
                    </a>
                </li>
            </ul>
        </div>
        <div class="col-xs-12">
            <div class="progress progress-striped active">
                <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;"></div>
            </div>
        </div>
    </div>
    <form id="ConfigurationForm" name="ConfigurationForm" action="@Request.Url.AbsoluteUri" method="POST">

        <div class="row setup-content" id="step-1">
                <div class="col-md-12 well">
                    @Html.Partial("~/Views/Cpu/_DropdownListGroup.cshtml", this.Model)
                </div>
        </div>
        <div class="row setup-content" id="step-2">
            <div class="col-xs-12">
                <div class="col-md-12 well">
                    @Html.Partial("~/Views/Memory/_DropdownListGroup.cshtml", this.Model)
                </div>
            </div>
        </div>
        <div class="row setup-content" id="step-3">
            <div class="col-xs-12">
                <div class="col-md-12 well">
                    @Html.Partial("~/Views/Storage/_DropdownListGroup.cshtml", this.Model)
                </div>
            </div>
        </div>
        <div class="row setup-content" id="step-4">
            <div class="col-xs-12">
                <div class="col-md-12 well">
                    @Html.Partial("~/Views/Gpu/_DropdownListGroup.cshtml", this.Model)
                </div>
            </div>
        </div>
        <div class="row setup-content" id="step-5">
            <div class="col-xs-12">
                <div class="col-md-12 well">
                    @Html.Partial("~/Views/Motherboard/_DropdownListGroup.cshtml")
                </div>
            </div>
        </div>
        <div class="row setup-content" id="step-6">
            <div class="col-xs-12">
                <div class="col-md-12 well">
                    @Html.Partial("~/Views/Psu/_DropdownListGroup.cshtml")
                </div>
            </div>
        </div>
        <div class="row setup-content" id="step-7">
            <div class="col-xs-12">
                <div class="col-md-12 well">
                    @Html.Partial("~/Views/Case/_DropdownListGroup.cshtml")
                </div>
            </div>
        </div>
        <div class="row setup-content" id="step-8">
            <div class="col-xs-12">
                <div class="col-md-12 well">
                    Tu budu vypisane vsetky komponenty a zelena fajocka
                </div>
            </div>
        </div>
    </form>
</section>