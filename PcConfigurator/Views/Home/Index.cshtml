@model PcConfigurator.Models.HomeModels.ConfigurationFormModel

@{
    ViewBag.Title = "Home Page";

    IList<SelectListItem> cpuBrandSelectItems = null;
    IList<SelectListItem> cpuSocketSelectItems = new List<SelectListItem>();
    IList<SelectListItem> cpuSelectItems = new List<SelectListItem>();

    if (this.Model.CpuBrandList != null)
    {
        cpuBrandSelectItems = this.Model.CpuBrandList
            .Select(s => new SelectListItem() { Text = s, Value = s })
            .ToList();
    }
}
<br />

<section id="wizard">
    <div class="row form-group">
        <div class="col-xs-12">
            <ul class="nav nav-pills nav-justified thumbnail setup-panel">
                <li class="active">
                    <a href="#step-1">
                        <h4 class="list-group-item-heading">CPU</h4>
                        <!--<p class="list-group-item-text">First step description</p>-->
                    </a>
                </li>
                <li class="disabled">
                    <a href="#step-2">
                        <h4 class="list-group-item-heading">Memory</h4>
                    </a>
                </li>
                <li class="disabled">
                    <a href="#step-3">
                        <h4 class="list-group-item-heading">Storage</h4>
                    </a>
                </li>
                <li class="disabled">
                    <a href="#step-4">
                        <h4 class="list-group-item-heading">GPU</h4>
                    </a>
                </li>
                <li class="disabled">
                    <a href="#step-5">
                        <h4 class="list-group-item-heading">Motherboard</h4>
                    </a>
                </li>
                <li class="disabled">
                    <a href="#step-6">
                        <h4 class="list-group-item-heading">PSU</h4>
                    </a>
                </li>
                <li class="disabled">
                    <a href="#step-7">
                        <h4 class="list-group-item-heading">Case</h4>
                    </a>
                </li>
                <li class="disabled">
                    <a href="#step-8">
                        <h4 class="list-group-item-heading">Confirm</h4>
                    </a>
                </li>
            </ul>
        </div>
        <div class="col-xs-12">
            <div id="bar" class="progress progress-info progress-striped active">
                <div class="progress-bar progress-bar-warning @this.Model.Message" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;"></div>
            </div>
        </div>
    </div>
    <form id="configurationForm" name="configurationForm" action="@Request.Url.AbsoluteUri" method="POST">

        <div class="row setup-content" id="step-1">
            <div class="col-xs-12">
                <div class="col-md-12 well text-center">
                    <div class="row">
                        <div class="col-sm-6 col-sm-offset-3">
                            <div class="row form-group">
                                <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
                                    @Html.DropDownList("CpuBrand", cpuBrandSelectItems, "Brand", new { @class = "form-control", @data_url = @Url.Action("LoadCpuSockets") })
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
                                    @Html.DropDownList("CpuSocket", Enumerable.Empty<SelectListItem>(), "Socket", new { @class = "form-control", @data_url = @Url.Action("LoadCpus"), @style = "display:none;" })
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
                                    @Html.DropDownList("CpuId", Enumerable.Empty<SelectListItem>(), "Cpu", new { @class = "form-control", @data_url = @Url.Action("LoadCpuSockets"), @style = "display:none;" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <button id="activate-step-2" class="btn btn-primary btn-lg">Activate Step 2</button>
                </div>
            </div>
        </div>
        <div class="row setup-content" id="step-2">
            <div class="col-xs-12">
                <div class="col-md-12 well">
                    <h1 class="text-center"> STEP 2</h1>
                </div>
            </div>
        </div>
        <div class="row setup-content" id="step-3">
            <div class="col-xs-12">
                <div class="col-md-12 well">
                    <h1 class="text-center"> STEP 3</h1>
                </div>
            </div>
        </div>
        <div class="row setup-content" id="step-4">
            <div class="col-xs-12">
                <div class="col-md-12 well">
                    <h1 class="text-center"> STEP 3</h1>
                </div>
            </div>
        </div>
        <div class="row setup-content" id="step-5">
            <div class="col-xs-12">
                <div class="col-md-12 well">
                    <h1 class="text-center"> STEP 3</h1>
                </div>
            </div>
        </div>
        <div class="row setup-content" id="step-6">
            <div class="col-xs-12">
                <div class="col-md-12 well">
                    <h1 class="text-center"> STEP 3</h1>
                </div>
            </div>
        </div>
        <div class="row setup-content" id="step-7">
            <div class="col-xs-12">
                <div class="col-md-12 well">
                    <h1 class="text-center"> STEP 3</h1>
                </div>
            </div>
        </div>
        <div class="row setup-content" id="step-8">
            <div class="col-xs-12">
                <div class="col-md-12 well">
                    <h1 class="text-center"> STEP 3</h1>
                </div>
            </div>
        </div>
    </form>
</section>