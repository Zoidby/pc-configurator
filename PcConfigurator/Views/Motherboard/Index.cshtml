@model IEnumerable<PcConfigurator.Models.MotherboardModels.MotherboardModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdministrationLayout.cshtml";
}

<h2>Motherboard</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Brand)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Format)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Socket)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MemoryMaximum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MemorySlots)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HarddriveInterfaces)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExpansionSlots)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Brand)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Format)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Socket)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MemoryMaximum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MemorySlots)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HarddriveInterfaces)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ExpansionSlots)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
