@model PcConfigurator.Entities.Harddrive
<hr />
<div class="row vcenter">
    <div class="col-xs-10 col-md-5">
        <div class="panel panel-success">
            <div class="panel-heading">@this.Model.Brand @this.Model.Name</div>
            @Html.HiddenFor(c => c.PowerConsumption)
            <table class="table table-hover">
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Capacity)</td>
                    <td>@Html.DisplayFor(model => model.Capacity)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Interface)</td>
                    <td>@Html.DisplayFor(model => model.Interface)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.PowerConsumption)</td>
                    <td>@Html.DisplayFor(model => model.PowerConsumption)</td>
                </tr>
            </table>
        </div>
    </div>
    <div class="col-xs-2 col-md-1">
        <span class="glyphicon glyphicon-ok-sign" aria-hidden="true"></span>
    </div>
</div>